<Window x:Class="Кожетьева_WPF.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="О программе" 
        Height="600" 
        Width="850"
        MinWidth="400"
        MinHeight="300"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="CanResize"
        KeyDown="Window_KeyDown">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFE0F7FA" Offset="0"/>
                <GradientStop Color="#FFB2EBF2" Offset="0.5"/>
                <GradientStop Color="#FFE0F7FA" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" 
                    Margin="0,0,0,10"
                    Background="Transparent">
                <Viewbox Stretch="Uniform">
                    <Image Source="/AboutImage.png" 
                           Opacity="0.7"
                           MaxWidth="500"
                           MaxHeight="250"/>
                </Viewbox>
            </Border>
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          Padding="30">
                <TextBlock TextWrapping="Wrap" 
                           TextAlignment="Center"
                           FontStyle="Italic"
                           FontSize="17">
                    <Run Text="&quot;Стоматологическая клиника&quot;"/>
                    <LineBreak/>
                    <Run Text="выполнила студентка группы ПВ311 Компьютерной Академии ТОП Кожетьева Маргарита"/>
                </TextBlock>
            </ScrollViewer>
            <Button x:Name="OkButton"
                    Grid.Row="2"
                    Content="OK"
                    Style="{StaticResource ModernButtonStyle}"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,10"
                    Padding="20,5"
                    Click="OkButton_Click"/>
        </Grid>
    </Grid>
</Window>